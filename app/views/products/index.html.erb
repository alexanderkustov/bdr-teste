<table>
  <tr>
    <th>Producer</th>
    <th>Customer</th>
    <th>Dt</th>
    <th>Desc</th>
    <th>Benefits it offers</th>
    <th>Estimated rsp</th>
    <th>L price</th>
    <th>Benefits to clients</th>
    <th>Photos</th>
    <th>Videos</th>
    <th>Sr2l</th>
    <th>Refp number</th>
