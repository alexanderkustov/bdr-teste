<% @products.each do |product| %>
  <tr>
    <td><%= product.producer_id %></td>
    <td><%= product.customer_id %></td>
    <td><%= product.dt %></td>
    <td><%= product.desc %></td>
    <td><%= product.benefits_it_offers %></td>
    <td><%= product.estimated_rsp %></td>
    <td><%= product.l_price %></td>
    <td><%= product.benefits_to_clients %></td>
    <td><%= product.photos %></td>
    <td><%= product.videos %></td>
    <td><%= product.sr2l %></td>
    <td><%= product.refp_number %></td>
    <td><%= product.fixed_costs %></td>
    <td><%= product.gross_margin %></td>
    <td><%= product.bp_link %></td>
    <td><%= product.pp_link %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

